<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:transitionName="newImgTN"
                android:id="@+id/act_new_img"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/termopast" />

            <TextView
                android:transitionName="textNewTN"
                android:id="@+id/text_name_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="Удалите сначала остатки старой термопасты, если они имеются,
при помощи ватных палочек или хлопковой салфетки. Затем нанесите одну каплю термопасты
на процессор и равномерное распределите ее очень тонким слоем при помощи, например,
ненужной пластиковой карты или кисти, если есть в комплекте с термопастой." />

        </LinearLayout>

    </ScrollView>

</LinearLayout>